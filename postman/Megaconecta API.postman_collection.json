					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Extract and save token\", function () {",
									"    var jsonData = pm.response.json();    ",
									"    pm.environment.set(\"token\", jsonData.data.token);    ",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "X-App-Id",
								"value": "{{xappid}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "username",
									"value": "{{username}}",
									"type": "text"
								},
								{
									"key": "password",
									"value": "{{password}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{url}}/api/v1/m/auth/login",
							"host": ["{{url}}"],
							"path": ["api", "v1", "m", "auth", "login"]
						},
						"description": "Authenticate user and receive access token"
					},
					"response": []
				}
			]
